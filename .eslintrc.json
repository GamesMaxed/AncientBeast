{
	"plugins": ["prettier", "jest"],
	"extends": ["prettier", "plugin:prettier/recommended"],
	"rules": {
		"prettier/prettier": "error",
		"no-undef": "error"
	},
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"es6": true,
		"jest/globals": true
	},
	"globals": {
		"Phaser": true
	}
}
